// WATER MELON(JAVA)

import java.util.*;

public class Main {
 
public static void main(String[] args){
 
Scanner sc = new Scanner(System.in);
int in = sc.nextInt();
 
if(in % 2 == 0){
  if(in > 2){
    System.out.println("YES");
  }
  else{
        System.out.println("NO");
  }
   }else{
    System.out.println("NO");
   }
 }
}
