//Way Too Long Words

import java.util.*;

public class Main {
 
public static void main(String[] args){
 
Scanner sc = new Scanner(System.in);
int n = sc.nextInt();
int i;
while(n>0){
  String s = sc.next();
  int l = s.length();
  String count = String.valueOf(l-2);
 
  if(l > 10){
    System.out.println(s.substring(0,1) + count + s.substring(l-1,l));
  }else{
    System.out.println(s);
  }
  n--;
}
 
}
}
